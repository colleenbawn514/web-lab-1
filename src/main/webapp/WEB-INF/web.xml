<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <!-- Timeout of inactivity in minutes -->
        <session-timeout>15</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <!-- Cookie lifetime in seconds -->
            <max-age>900</max-age>
        </cookie-config>
    </session-config>
    <welcome-file-list>
        <welcome-file>app.servlets.UserServlet</welcome-file>
    </welcome-file-list>
    <!-- authCheack servlet -->
    <filter>
        <filter-name>authCheck</filter-name>
        <filter-class>app.filters.authCheckFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authCheck</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- auth servlet -->
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>app.servlets.AuthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <!-- index servlet -->
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>app.servlets.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <!-- user servlet -->
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>app.servlets.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>app.servlets.RegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>app.servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>playlist</servlet-name>
        <servlet-class>app.servlets.PlaylistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>playlist</servlet-name>
        <url-pattern>/user/playlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>playlistCreate</servlet-name>
        <servlet-class>app.servlets.PlaylistCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>playlistCreate</servlet-name>
        <url-pattern>/user/playlist/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>trackAdd</servlet-name>
        <servlet-class>app.servlets.TrackAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>trackAdd</servlet-name>
        <url-pattern>/user/playlist/trackAdd</url-pattern>
    </servlet-mapping>
    <!--<error-page>
        <error-code>404</error-code>
        <location>/errors/404.jsp</location>
    </error-page>-->

</web-app>